<%= form_with(model: collection, local: true) do |form| %>
  <% if collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(collection.errors.count, "error") %> prohibited this collection from being saved:</h2>

      <ul>
      <% collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Enter new album name" %>
    <%= form.text_field :name, id: :collection_name %>
  </div>

  <div class="field">
    <%= form.label :picture, "Select cover picture"%>
    <%= form.select :picture, Dir.glob("*.{jpg,JPG}", base: "app/assets/images").map{|u| [u, u]}, {:prompt => 'Please select a cover picture'}, id: :collection_picture %>
  </div>

  <div class="field">
    <%= form.label :description, "Enter description"%>
    <%= form.text_field :description, id: :collection_description %>
  </div>

  <div class="actions">
    <%= form.submit "Create an album"%>
  </div>
<% end %>
